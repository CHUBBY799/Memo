<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- dialog theme -->
    <style name="MyDialog" parent="Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/guide_title</item>
        <item name="android:colorAccent">@color/guide_button</item>
    </style>

    <!-- MyEditText -->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/underline_background</item>
        <item name="colorControlActivated">@android:color/holo_orange_dark</item>
    </style>

    <!-- anim -->
    <style name="anim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_popupwindow_in</item>
        <item name="android:windowExitAnimation">@anim/push_popupwindow_out</item>
    </style>

    <!-- dialog anim -->
    <style name="dialog_anim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <!-- orange theme -->
    <style name="OrangeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/item_btn_text</item>
    </style>

    <!-- full screen theme -->
    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>//设置全屏
        <item name="android:windowNoTitle">true</item> //设置没有状态栏
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
</resources>
