<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="17dp"
            android:paddingTop="8dp"
            android:paddingEnd="17dp"
            android:paddingBottom="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.shining.memo.widget.MaskImageView
                app:mask_color="@color/photo_shelter"
                app:mask_level="foreground"
                app:is_ignore_alpha="false"
                app:is_show_mask_on_click="false"
                android:id="@+id/item_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/content_background"
                android:scaleType="fitCenter" />
            <Button
                android:id="@+id/photo_delete"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/photo_delete_icon"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone"/>
        </RelativeLayout>


</android.support.constraint.ConstraintLayout>