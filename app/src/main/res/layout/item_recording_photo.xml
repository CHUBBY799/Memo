<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="17dp"
        android:paddingTop="8dp"
        android:paddingEnd="17dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.shining.memo.widget.MaskImageView
                app:mask_color="#88000000"
                app:mask_level="foreground"
                app:is_ignore_alpha="false"
                app:is_show_mask_on_click="false"
                android:id="@+id/item_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/audio_rerecording_shape"
                android:scaleType="fitCenter" />
            <Button
                android:id="@+id/photo_delete"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/photo_delete_icon"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>