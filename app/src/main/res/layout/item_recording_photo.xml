<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingTop="8dp"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/photo_shelter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/half_transparent_orange"
            android:visibility="gone">
            <Button
                android:id="@+id/photo_cancel"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/photo_delete"
                android:background="@drawable/cancel_icon" />
            <Button
                android:id="@+id/photo_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/close_btn_48x48px"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <com.shining.memo.widget.ResizableImageView
            android:id="@+id/item_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/audio_rerecording_shape"
            android:scaleType="fitCenter" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>