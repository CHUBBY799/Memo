<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/main_no_data_iv"
            android:layout_width="48dp"
            android:layout_height="55dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/main_no_data_tv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:text="No Tasks"
            android:textColor="@color/no_data_top"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/main_no_data_iv"
            app:layout_constraintTop_toTopOf="@id/main_no_data_iv"/>
        <TextView
            android:id="@+id/main_no_data_tv_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Tasks will appear here"
            android:textSize="14sp"
            android:textColor="@color/no_data_top"
            app:layout_constraintTop_toBottomOf="@+id/main_no_data_tv_top"
            app:layout_constraintLeft_toLeftOf="@+id/main_no_data_tv_top"/>

    </android.support.constraint.ConstraintLayout>
