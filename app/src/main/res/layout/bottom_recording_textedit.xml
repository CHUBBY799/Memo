<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@color/content_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
        <ImageButton
            android:id="@+id/bottom_textedit_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/button_ripple"
            android:scaleType="centerInside"
            android:src="@drawable/back_icon"
            android:layout_alignParentLeft="true"/>
        <ImageButton
            android:id="@+id/bottom_bold"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:scaleType="centerInside"
            android:background="@drawable/button_ripple"
            android:src="@drawable/no_bold_text_icon"
            android:layout_toLeftOf="@+id/bottom_underline"/>
        <ImageButton
            android:id="@+id/bottom_underline"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:scaleType="centerInside"
            android:background="@drawable/button_ripple"
            android:src="@drawable/no_underline_text_icon"
            android:layout_toLeftOf="@+id/bottom_deleteline"/>
        <ImageButton
            android:id="@+id/bottom_deleteline"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:scaleType="centerInside"
            android:background="@drawable/button_ripple"
            android:src="@drawable/no_underline_text_icon"
            android:layout_toLeftOf="@+id/bottom_color"/>
        <ImageButton
            android:id="@+id/bottom_color"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:scaleType="centerInside"
            android:background="@drawable/button_ripple"
            android:layout_marginEnd="25dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/text_color_icon" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>