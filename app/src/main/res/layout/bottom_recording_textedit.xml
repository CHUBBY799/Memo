<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/bottom_textedit_back"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/back_icon"
            android:layout_alignParentLeft="true"/>

        <Button
            android:id="@+id/bottom_bold"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bold_text_icon"
            android:layout_toLeftOf="@+id/bottom_underline"/>
        <Button
            android:id="@+id/bottom_underline"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/underline_text_icon"
            android:layout_toLeftOf="@+id/bottom_deleteline"/>
        <Button
            android:id="@+id/bottom_deleteline"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/deleteline_text_icon"
            android:layout_toLeftOf="@+id/bottom_color"/>
        <Button
            android:id="@+id/bottom_color"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/text_color_icon" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>