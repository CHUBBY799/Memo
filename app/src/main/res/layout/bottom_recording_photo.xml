<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@color/content_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:src="@drawable/import_from_gallery_icon" />
            <Button
                android:id="@+id/photo_gallery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_ripple"
                android:textSize="16dp"
                android:textColor="@color/item_btn_text"
                android:text="@string/photo_gallery"
                android:gravity="left|center_vertical"
                android:paddingLeft="60dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:src="@drawable/import_from_camera_icon" />
            <Button
                android:id="@+id/photo_camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_ripple"
                android:textSize="16dp"
                android:textColor="@color/item_btn_text"
                android:text="@string/photo_camera"
                android:gravity="left|center_vertical"
                android:paddingLeft="60dp"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="@color/photo_divider"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>