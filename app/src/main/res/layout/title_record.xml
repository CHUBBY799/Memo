<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/title_record">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/title_border"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/alarm_background">

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/title_border"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/alarm_background">
    <Button
        android:id="@+id/title_cancel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/close_btn_48x48px"
        android:gravity="center"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/title_urgent"
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:background="@drawable/selector_urgent_color"
        android:text="@string/urgent"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/title_alarm"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/alarm_clock_btn_48x48px"
        android:gravity="center"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title_urgent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/title_edit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/text_style_btn_48x48px"
        android:gravity="center"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title_alarm"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/title_confirm"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/ok_btn_48x48px"
        android:gravity="center"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>